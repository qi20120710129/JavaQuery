<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--获取连接四要素-->
    <properties resource="jdbc.properties"/>
    <settings>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>
    <typeAliases>

        <package name="cn.zywy.bean"/>

    </typeAliases>


    <!--设置mybatis运行环境-->
    <environments default="mysql">
        <environment id="mysql">
            <!--配置事务管理器 现在mybatis自己采用jdbc事务管理
              后期我们整合的时候   这个事务会交给spring进行管理-->
            <transactionManager type="JDBC"/>
            <!--配置数据源  POOLED:mybatis自带的数据源  也可以使用tomcat中的  JNDI-->
            <dataSource type="POOLED">
                <!--从jdbc.properties 文件中获取 数据库连接的 四要素 注入到 数据源中-->
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--配置需要的mapper文件-->
    <mappers>
       <!-- <mapper resource="mapper/CountrysMapper.xml"/>-->
        <mapper resource="mapper/CountrysDeferMapper.xml"/>
    </mappers>

</configuration>